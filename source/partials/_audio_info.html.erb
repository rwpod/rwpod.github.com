<div class="track-controls-and-info">
  <button class="track-play-button" data-audio-url="<%= article.data.audio_url %>" data-title="<%= article.title %>" data-image="<%= article.data.main_image %>" data-link="<%= url_for(article) %>">
    <%= svg_sprite 'play' %>
  </button>
  <div class="track-details-info">
    <div class="track-details-info__item">
      <%= article.data.duration %> (<%= number_to_human_size(article.data.audio_length) %>),
      <%- link_to article.data.audio_url, target: '_blank', rel: 'noopener noreferrer', class: 'track-details-info__item' do -%>
        Скачать,
      <%- end -%>
      <%- link_to article.data.audio_mirror, target: '_blank', rel: 'noopener noreferrer', class: 'track-details-info__item' do -%>
        Зеркало
      <%- end -%>
    </div>
  </div>
</div>
