<div class="track-controls-and-info">
  <button class="track-play-button" data-audio-url="<%= article.data.audio_url %>" data-title="<%= article.title %>" data-image="<%= article.data.main_image %>" data-link="<%= url_for(article) %>">
    <%= svg_sprite 'play' %>
  </button>
  <div class="track-details-info">
    <%= article.data.duration %>,
    <% link_to article.data.audio_url, target: '_blank', rel: 'noopener noreferrer' do %>
      Скачать (<%= number_to_human_size(article.data.audio_length) %>)
    <% end %>,
    <% link_to article.data.audio_mirror, target: '_blank', rel: 'noopener noreferrer' do %>
      Зеркало
    <% end %>
  </div>
</div>
