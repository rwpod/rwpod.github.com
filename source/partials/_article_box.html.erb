<div class="column">
  <div class="box">
    <div class="header row">
      <div class="left"><%= truncated_article_title(article_box) %></div>
      <div class="right"><small><%= article_date(article_box) %></small></div>
    </div>
    <div class="content">
      <h2>
        <%= link_to article_box.title, article_box %>
      </h2>
    </div>
    <div class="footer">
      <%= link_to "0 Comments", full_url("#{article_box.url}#disqus_thread") %>
    </div>
  </div>
</div>
